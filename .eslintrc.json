{
  "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
  },
  "extends": ["standard", "standard-react"],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          0,
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ]
  },
  "parser": "babel-eslint"
}